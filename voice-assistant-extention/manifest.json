{
  "manifest_version": 3,
  "name": "86 Hands",
  "version": "1.0",
  "description": "Control Chrome actions with voice commands... no hands!",

  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],

  "icons": {
    "48": "/images/2hands48px.png",
    "128": "/images/2hands128px.png"
  },

  "host_permissions": [
    "https://geminiproxy-53jbuxguwq-uc.a.run.app/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "/pages/popup.html"
  }
}
