{
  "manifest_version": 3,
  "name": "Voice Command Assistant",
  "version": "1.0",
  "description": "Control Chrome actions with voice commands.",

  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "https://geminiproxy-53jbuxguwq-uc.a.run.app/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "/pages/popup.html",
    "default_icon": "/icons/mockPhoto.png"
  }
}
