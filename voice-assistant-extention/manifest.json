{
  "manifest_version": 3,
  "name": "Voice Assistant for Chrome",
  "version": "1.0",
  "description": "Control Chrome using your voice!",
  "permissions": ["tabs", "activeTab", "scripting"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/mic.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

